# ============================================================
# Frontend — Development image (Vite dev server)
# ============================================================
FROM node:20-alpine
WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm ci

# Source is mounted as a volume at runtime — no COPY needed.

EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
