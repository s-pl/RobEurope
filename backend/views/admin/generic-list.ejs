<%- include('../partials/header') %>

<section class="page-header">
  <div>
    <p class="page-eyebrow"><%= t('generic.eyebrow') %></p>
    <h2 class="page-title"><%= title %></h2>
  </div>
  <a href="/admin/<%= modelName %>/create" class="btn btn-primary"><%= t('generic.create') %></a>
</section>

<div class="table-container">
  <table>
    <thead>
      <tr>
        <% config.fields.filter(f => f.list).forEach(field => { %>
          <th><%= field.label %></th>
        <% }) %>
        <th><%= t('generic.table.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <% if (items.length === 0) { %>
        <tr>
          <td colspan="<%= config.fields.filter(f => f.list).length + 1 %>" style="text-align: center;">
            <%= t('generic.table.empty') %>
          </td>
        </tr>
      <% } else { %>
        <% items.forEach(item => { %>
          <tr>
            <% config.fields.filter(f => f.list).forEach(field => { %>
              <td>
                <% if (field.type === 'datetime') { %>
                  <%= item[field.name] ? new Date(item[field.name]).toLocaleString(locale || 'es-ES') : t('common.notAvailable') %>
                <% } else if (field.name.includes('url') && item[field.name]) { %>
                  <a href="<%= item[field.name] %>" target="_blank"><%= t('generic.link') %></a>
                <% } else { %>
                  <%= item[field.name] || t('common.notAvailable') %>
                <% } %>
              </td>
            <% }) %>
            <td>
              <div class="table-actions">
                <a href="/admin/<%= modelName %>/edit/<%= item[config.pk] %>" class="btn btn-sm btn-outline">
                  <%= t('actions.edit') %>
                </a>
                <form action="/admin/<%= modelName %>/delete/<%= item[config.pk] %>" method="POST" onsubmit="return confirm(<%- JSON.stringify(t('actions.confirmDelete')) %>);" style="margin: 0;">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="btn btn-sm btn-danger"><%= t('actions.delete') %></button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
