<%- include('../partials/header', { title: t('ldap.metaTitle') }) %>

<section class="page-header">
    <div>
        <p class="page-eyebrow"><%= t('ldap.eyebrow') %></p>
        <h2 class="page-title"><%= t('ldap.title') %></h2>
    </div>
    <a href="/admin/ldap-users/add" class="btn btn-primary"><%= t('ldap.add') %></a>
</section>

<div class="card">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th><%= t('ldap.table.headers.uid') %></th>
                    <th><%= t('ldap.table.headers.firstName') %></th>
                    <th><%= t('ldap.table.headers.lastName') %></th>
                    <th><%= t('ldap.table.headers.email') %></th>
                    <th><%= t('ldap.table.headers.actions') %></th>
                </tr>
            </thead>
            <tbody>
                <% if (users && users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <% if (user && user.uid) { %>
                        <tr>
                            <td><%= Array.isArray(user.uid) ? user.uid[0] : user.uid %></td>
                            <td><%= Array.isArray(user.cn) ? user.cn[0] : user.cn %></td>
                            <td><%= Array.isArray(user.sn) ? user.sn[0] : user.sn %></td>
                            <td><%= Array.isArray(user.mail) ? user.mail[0] : user.mail %></td>
                            <td>
                                <div class="table-actions">
                                    <a href="/admin/ldap-users/edit/<%= Array.isArray(user.uid) ? user.uid[0] : user.uid %>" class="btn btn-sm btn-outline"><%= t('actions.edit') %></a>
                                    <form action="/admin/ldap-users/delete/<%= Array.isArray(user.uid) ? user.uid[0] : user.uid %>" method="POST" style="display: inline;">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm(<%- JSON.stringify(t('ldap.confirmDelete')) %>)"><%= t('actions.delete') %></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="table-empty"><%= t('ldap.table.empty') %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>