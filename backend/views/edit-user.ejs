<%- include('partials/header') %>

<section class="page-header">
  <div>
    <p class="page-eyebrow"><%= t('editUser.eyebrow') %></p>
    <h2 class="page-title"><%= t('editUser.title') %></h2>
  </div>
</section>

<div class="card" style="max-width: 720px; margin: 0 auto;">
  <form action="/admin/users/<%= user.id %>/edit" method="POST" class="form-stack">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div>
      <label for="username"><%= t('editUser.form.username') %></label>
      <input type="text" id="username" name="username" value="<%= user.username %>" required>
    </div>

    <div>
      <label for="email"><%= t('editUser.form.email') %></label>
      <input type="email" id="email" name="email" value="<%= user.email %>" required>
    </div>

    <div class="form-grid">
      <div>
        <label for="first_name"><%= t('editUser.form.firstName') %></label>
        <input type="text" id="first_name" name="first_name" value="<%= user.first_name %>">
      </div>
      <div>
        <label for="last_name"><%= t('editUser.form.lastName') %></label>
        <input type="text" id="last_name" name="last_name" value="<%= user.last_name %>">
      </div>
    </div>

    <div class="form-grid">
      <div>
        <label for="role"><%= t('editUser.form.role') %></label>
        <select id="role" name="role">
          <option value="user" <%= user.role === 'user' ? 'selected' : '' %>><%= t('editUser.form.roleUser') %></option>
          <option value="super_admin" <%= user.role === 'super_admin' ? 'selected' : '' %>><%= t('editUser.form.roleAdmin') %></option>
        </select>
      </div>
      <div>
        <label for="is_active"><%= t('editUser.form.status') %></label>
        <select id="is_active" name="is_active">
          <option value="true" <%= user.is_active ? 'selected' : '' %>><%= t('editUser.form.statusActive') %></option>
          <option value="false" <%= !user.is_active ? 'selected' : '' %>><%= t('editUser.form.statusInactive') %></option>
        </select>
      </div>
    </div>

    <div class="form-actions">
      <a href="/admin/users" class="btn btn-muted"><%= t('actions.cancel') %></a>
      <button type="submit" class="btn btn-primary"><%= t('editUser.form.submit') %></button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
